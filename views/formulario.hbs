{{> header }}

<div class="d-flex flex-column justify-content-around container-sm my-5 p-4 shadow rounded-3">
  <h2 class="my-3 border-bottom ">Formularios de Ingreso de Producto</h2>
  <form action="/productos" method="POST" class="d-flex flex-column justify-content-around border-bottom">
    <h4 class="mt-3">Producto:</h4> <input type="text" name="title" /> 
    <h4 class="mt-3">Precio: $</h4><input type="number" name="price" /> 
    <h4 class="mt-3">Imagen:</h4><input type="text" name="thumbnail" />
    <button class="my-4 btn-dark btn-lg w-50 mx-auto">Enviar</button>
  </form>
  <button type="button" class="btn btn-outline-secondary mt-5" onclick="window.location.href='/productos';">Ver Lista</button>
</div>


    
    